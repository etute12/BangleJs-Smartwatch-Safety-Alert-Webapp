{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",  
      "use": "@vercel/node"
    },
    {
      "src": "index.html",       
      "use": "@vercel/static"
    },
    {
      "src": "styles.css",        
      "use": "@vercel/static"
    },
    {
      "src": "scripts/*.js",     
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/", "dest": "index.html" },              
    { "src": "/api/.*", "dest": "server/server.js" },  
    { "src": "/(.*)", "dest": "/$1" }                 
  ]
}