{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",  
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    },
    {
      "src": "scripts/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "*.wav",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/auth", "dest": "/auth.html" },
    { "src": "/auth.html", "dest": "/auth.html" },
    { "src": "/", "dest": "/index.html" },
    { "src": "/api/(.*)", "dest": "/server/index.js" },
    { "src": "/(.*\\.(css|js|wav|html))", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}